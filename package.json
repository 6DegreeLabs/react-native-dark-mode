{
	"name": "react-native-dark-mode",
	"version": "0.0.12",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/6DegreeLabs/react-native-dark-theme.git",
		"baseUrl": "https://github.com/6DegreeLabs/react-native-dark-theme"
	  },
	"workspaces": {
		"packages": [
			"example",
			"library"
		],
		"nohoist": [
			"**/react-native",
			"**/react-native/**",
			"**/react",
			"**/react/**"
		]
	},
	"scripts": {
		"start": "yarn workspace example start",
		"prepublishOnly": "yarn run clean && yarn run copy-readme && yarn run build && yarn run copy-js-d.ts",
		"clean": "rimraf dist",
		"copy-readme": "cp ./README.md ./",
		"copy-js-d.ts": "cp ./src/*.js ./src/*.d.ts ./dist",
		"build": "tsc",
		"watch": "yarn run build --watch"
	},

	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/runtime": "^7.4.5",
		"@types/react-native": "^0.57.60",
		"babel-plugin-module-resolver": "^3.2.0",
		"metro-react-native-babel-preset": "^0.54.1",
		"rimraf": "^2.6.3",
		"typescript": "^3.5.1"
	}
}
